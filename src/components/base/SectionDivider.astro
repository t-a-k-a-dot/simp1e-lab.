---
import { cn } from '~/lib/utils'

interface Props {
  className?: string
  position?: 'top' | 'bottom'
}

const { className, position } = Astro.props
---

<section class={cn('border-y border-border/50', `section-divider-${position}`, className)}>
  <div
    class="h-1.5 w-full bg-[repeating-linear-gradient(-45deg,var(--color-border),var(--color-border)_1px,transparent_1px,transparent_6px)] opacity-50"
  >
  </div>
</section>
